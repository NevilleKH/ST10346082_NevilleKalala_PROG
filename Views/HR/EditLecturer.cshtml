@{
}
@model Part3Claims.Models.EditLecturerViewModel

@{
    ViewData["Title"] = "Edit Lecturer";
}
<div class="edit-lecturer-container">
    <h1>Edit Lecturer</h1>
    <form asp-action="EditLecturer" method="post" class="edit-lecturer-form">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="form-error"></span>
        </div>

        <button type="submit" class="btn-save">Save</button>
    </form>
</div>
