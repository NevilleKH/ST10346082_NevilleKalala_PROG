@{
}
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Lecturers";
}

<div class="lecturers-table-container">
    <h1>Lecturers</h1>
    <table class="lecturers-table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>
                        <a asp-action="EditLecturer" asp-route-id="@user.Id" class="btn-edit">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
